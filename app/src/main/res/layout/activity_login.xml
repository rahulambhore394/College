<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="#ffffff">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_login_textinfo"
        android:text="Farmer Login"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_mycard"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="30dp"
        app:cardMaxElevation="32dp"
        android:layout_marginRight="@dimen/_36sdp"
        android:layout_marginLeft="@dimen/_36sdp"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/cv_login_cardview"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp"
                app:cardElevation="30dp"
                app:cardMaxElevation="32dp"
                android:layout_marginRight="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="50dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_action_name"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        >
                    </ImageView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_login_username"
                        android:hint="Username"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="normal"
                        android:background="@color/white"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:inputType="text"
                        android:fontFamily="@font/poppins"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp"
                app:cardElevation="30dp"
                app:cardMaxElevation="32dp"
                android:layout_marginRight="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="25dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/baseline_key_24"
                        android:layout_marginTop="6dp"
                        >

                    </ImageView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_login_password"
                        android:hint="Password"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:background="@color/white"
                        android:textStyle="normal"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:inputType="textPassword"
                        android:fontFamily="@font/poppins"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_showhide"
                android:text="Show password"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="12dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:buttonTint="@color/black"
                android:buttonTintMode="src_in" />

            <Button
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_45sdp"
                android:id="@+id/btn_login"
                android:text="Login"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_login_newuser"
        android:text="Don't have account ? Sign up"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:layout_marginBottom="12dp"
        />

</LinearLayout>
