<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="250px"
        android:layout_height="250px"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        >
    </ImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_login_cardview"
        android:background="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="16dp"
        app:cardMaxElevation="32dp"
        android:layout_margin="16sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your username"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/madimi"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_enterusername"
                android:hint="Username"
                android:layout_marginTop="2dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:textAlignment="textStart"
                android:inputType="text"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your password"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/madimi"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_enterpswd"
                android:hint="Password"
                android:layout_marginTop="2dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:textAlignment="textStart"
                android:inputType="text"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/madimi"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_entername"
                android:hint="Name"
                android:layout_marginTop="2dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:textAlignment="textStart"
                android:inputType="text"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your Phone no"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/madimi"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_enter_phone"
                android:hint="Phone number"
                android:layout_marginTop="2dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:textAlignment="textStart"
                android:inputType="number"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your Email id"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/madimi"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_enteremail"
                android:hint="Email id"
                android:layout_marginTop="2dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:textAlignment="textStart"
                android:inputType="text"
                />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_marginBottom="20dp"
                android:id="@+id/btn_reg"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginTop="16dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>